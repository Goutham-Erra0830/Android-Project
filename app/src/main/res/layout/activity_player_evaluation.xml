<?xml version="1.0" encoding="utf-8"?>

<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".SportsNewsActivity">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        tools:context=".SportsNewsActivity">

        <TextView
            android:id="@+id/Playerevaluation"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:layout_marginTop="16dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/circularbordersolidblue"
            android:gravity="center"
            android:paddingVertical="16dp"
            android:text="@string/Playerevaluation"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewPlayers"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/Playerevaluation"
            android:clipToPadding="false"
            android:scrollbars="vertical" />

    </RelativeLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>
