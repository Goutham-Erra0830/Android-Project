<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CoachActivity"
    android:background="@color/grey">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey"
        android:paddingTop="30dp">

        <TextView
            android:id="@+id/text"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:fontFamily="sans-serif-black"
            android:text="Hello,"
            android:textColor="@color/black"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/textCopy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:fontFamily="sans-serif-black"
            android:text=" "
            android:textAlignment="viewStart"
            android:textColor="@color/black"
            android:textSize="30sp"
            app:layout_constraintTop_toBottomOf="@+id/text" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="68dp"
            android:layout_height="78dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/coach"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="80dp"
            tools:layout_editor_absoluteX="303dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_gravity="top"
            android:background="@drawable/circularbordersolidblue"
            android:orientation="vertical"
            android:paddingTop="50dp"
            android:layout_marginTop="80dp"
            tools:layout_editor_absoluteX="-16dp"
            tools:layout_editor_absoluteY="91dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp">

                <TextView
                    android:id="@+id/Rating"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:background="@drawable/circular_grey_bordersolid"
                    android:gravity="center"
                    android:paddingVertical="16dp"
                    android:text="@string/Rating"
                    android:textSize="18sp" />


            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:background="@drawable/circularbordersolidmoreradius"
                android:orientation="vertical"
                android:paddingTop="15dp"
                tools:layout_editor_absoluteX="70dp"
                tools:layout_editor_absoluteY="165dp"
                android:layout_marginTop="20dp"
                >

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginStart="12dp"
                    android:fontFamily="sans-serif-black"
                    android:paddingTop="0dp"
                    android:text="Discover"
                    android:textColor="@color/black"
                    android:textSize="30sp"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="53dp" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="42dp">

                    <!-- First row with two widgets side by side -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/row1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="16dp">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/teamBuilding"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/dashboardItem2"
                            app:layout_constraintTop_toTopOf="parent"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="4dp"
                            app:cardUseCompatPadding="true"
                            app:cardBackgroundColor="#F0F0F0">

                            <!-- Dashboard Item 1 Content -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:padding="16dp"
                                android:elevation="2dp">

                                <ImageView
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:src="@drawable/teambuilding"
                                    android:layout_gravity="center"
                                    android:contentDescription="Dashboard Item 1 Icon"
                                    />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Team Building"
                                    android:textSize="18sp"
                                    android:layout_gravity="center"/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/dashboardItem2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toEndOf="@id/teamBuilding"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="4dp"
                            app:cardUseCompatPadding="true"
                            android:onClick="playerEvaluation"
                            app:cardBackgroundColor="#F0F0F0">

                            <!-- Dashboard Item 2 Content -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:padding="16dp"
                                android:elevation="2dp">

                                <ImageView
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:src="@drawable/playerevaluation"
                                    android:layout_gravity="center"
                                    android:contentDescription="Dashboard Item 2 Icon"
                                    android:id="@+id/imageView2" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="Player Evaluation"
                                    android:textSize="18sp" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <!-- Second row with two widgets side by side -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/row2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/row1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="16dp">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/dashboardItem3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/dashboardItem4"
                            app:layout_constraintTop_toTopOf="parent"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="4dp"
                            app:cardUseCompatPadding="true"
                            app:cardBackgroundColor="#F0F0F0">

                            <!-- Dashboard Item 3 Content -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:padding="16dp"
                                android:elevation="2dp">

                                <ImageView
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:src="@drawable/personalgrowth"
                                    android:layout_gravity="center"
                                    android:contentDescription="Dashboard Item 3 Icon"
                                    android:id="@+id/imageView3" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="Player Growth"
                                    android:textSize="18sp" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/dashboardItem4"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toEndOf="@id/dashboardItem3"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="4dp"
                            app:cardUseCompatPadding="true"
                            app:cardBackgroundColor="#F0F0F0">

                            <!-- Dashboard Item 4 Content -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:padding="16dp"
                                android:elevation="2dp">

                                <ImageView
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:src="@drawable/events"
                                    android:layout_gravity="center"
                                    android:contentDescription="Dashboard Item 4 Icon"
                                    android:id="@+id/imageView4" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="Plan Events"
                                    android:textSize="18sp" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottomLinearLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="16dp">

            <!-- ImageButton 1 -->
            <ImageButton
                android:id="@+id/discover"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:background="?android:attr/selectableItemBackground"
                android:contentDescription="Button 1"
                android:src="@drawable/ic_compass"
                android:scaleType="fitCenter"/>

            <!-- ImageButton 2 -->
            <ImageButton
                android:id="@+id/myevents"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:background="?android:attr/selectableItemBackground"
                android:contentDescription="Button 2"
                android:src="@drawable/ic_schedule"
                android:scaleType="fitCenter"
                android:onClick="Eventscoach"/>

            <!-- ImageButton 3 -->
            <ImageButton
                android:id="@+id/profileCoach"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:background="?android:attr/selectableItemBackground"
                android:contentDescription="Button 3"
                android:src="@drawable/ic_profile"
                android:scaleType="fitCenter" />
        </LinearLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>