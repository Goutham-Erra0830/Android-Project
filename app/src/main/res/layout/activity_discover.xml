<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">


            <TextView
                android:id="@+id/Highlights"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:layout_marginTop="16dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/circularbordersolidblue"
                android:gravity="center"
                android:paddingVertical="16dp"
                android:text="@string/Highlights"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                app:layout_collapseMode="parallax"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/Highlights"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:background="@color/grey"
        android:layout_marginTop="90dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- WebView1 at the top -->
            <WebView
                android:id="@+id/youtubeWebView1"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@android:color/darker_gray" />

            <!-- WebView2 in the middle -->
            <WebView
                android:id="@+id/youtubeWebView2"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@android:color/darker_gray"/>

            <!-- WebView3 at the bottom -->
            <WebView
                android:id="@+id/youtubeWebView3"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@android:color/darker_gray" />

            <!-- WebView4 at the bottom -->
            <WebView
                android:id="@+id/youtubeWebView4"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@android:color/darker_gray" />


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
