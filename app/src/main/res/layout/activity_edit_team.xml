<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:orientation="vertical"
    android:background="#293859">


    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="650dp"
        android:layout_gravity="center"
        android:background="@drawable/circular_grey_bordersolid"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="70dp"
        tools:layout_editor_absoluteY="165dp"
        android:layout_marginTop="55dp"
        android:layout_centerHorizontal="true"
        >

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <TextView
            android:id="@+id/textViewSelectionMessage"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:text="@string/selectTeamA"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:background="@drawable/circularbordersolidblue"
            android:padding="16dp"
            />

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <LinearLayout
            android:layout_width="330dp"
            android:layout_height="450dp"
            android:layout_below="@+id/mySpace"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:background="@drawable/circularbordersolid"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="70dp"
            tools:layout_editor_absoluteY="165dp">

            <!-- RecyclerView to display the list of players -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewPlayers"
                android:layout_width="350dp"
                android:layout_height="400dp"
                android:layout_above="@+id/doneButton"
                android:layout_marginBottom="16dp" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />
        <!-- "Done" button to update TeamA data -->
        <Button
            android:id="@+id/doneButton"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="@string/done"
            android:enabled="false"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:padding="8dp"
            android:textSize="16sp"
            android:background="@drawable/circularbordersolidblue"/>

    </LinearLayout>


</RelativeLayout>