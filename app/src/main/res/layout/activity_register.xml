<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:orientation="vertical"
    android:background="#293859">

    <ImageView
        android:id="@+id/myImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/registration"/>

    <Space
        android:id="@+id/mySpace"
        android:layout_width="match_parent"
        android:layout_height="250dp" />


    <LinearLayout
        android:layout_width="550dp"
        android:layout_height="2000dp"
        android:layout_below="@+id/mySpace"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:background="@drawable/register_circular_grey_bordersolid"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="70dp"
        tools:layout_editor_absoluteY="165dp">

        <TextView
            android:id="@+id/register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/space"
            android:gravity="center"
            android:text="@string/register"
            android:textColor="@color/black"
            android:textSize="40sp"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="330dp"
            android:layout_height="450dp"
            android:layout_below="@+id/mySpace"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:background="@drawable/circularbordersolid"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="70dp"
            tools:layout_editor_absoluteY="165dp">

            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp" />

            <TextView
                android:id="@+id/firstname"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:background="@drawable/circular_grey_bordersolid"
                android:gravity="center"
                android:paddingVertical="8dp"
                android:text="@string/fullname"
                android:textSize="45px" />

            <EditText
                android:id="@+id/FullnameET"
                android:layout_width="270dp"
                android:layout_height="48dp"
                android:layout_marginStart="16dp"
                android:ems="0"
                android:hint="@string/fullname"
                android:inputType="text" />

            <TextView
                android:id="@+id/emailtext"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:background="@drawable/circular_grey_bordersolid"
                android:gravity="center"
                android:paddingVertical="8dp"
                android:text="@string/email"
                android:textSize="45px" />

            <EditText
                android:id="@+id/emailET"
                android:layout_width="270dp"
                android:layout_height="48dp"
                android:layout_marginStart="16dp"
                android:ems="10"
                android:hint="@string/enteremail"
                android:inputType="textEmailAddress"
                android:minHeight="48dp" />

            <TextView
                android:id="@+id/passwordtext"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:background="@drawable/circular_grey_bordersolid"
                android:gravity="center"
                android:paddingVertical="8dp"
                android:text="@string/password"
                android:textSize="45px" />

            <EditText
                android:id="@+id/passwordET"
                android:layout_width="270dp"
                android:layout_height="48dp"
                android:layout_marginStart="16dp"
                android:ems="10"
                android:hint="@string/enterpassword"
                android:inputType="textPassword" />

            <TextView
                android:id="@+id/profiletype"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:background="@drawable/circular_grey_bordersolid"
                android:gravity="center"
                android:paddingVertical="8dp"
                android:text="@string/usertype"
                android:textSize="45px" />

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/RegisterButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:onClick="clickedOnRegister"
                android:padding="8dp"
                android:text="@string/register"
                android:textSize="16sp"
                app:cornerRadius="12dp"
                tools:layout_editor_absoluteX="161dp"
                tools:layout_editor_absoluteY="520dp" />

        </LinearLayout>
    </LinearLayout>



    </RelativeLayout>